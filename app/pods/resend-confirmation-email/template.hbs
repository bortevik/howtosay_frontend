<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>{{t 'resend-confirmation-email.title'}}</h2>
    <hr/>

    {{#if errorMessage}}
      <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}

    <form {{action 'resendEmail' on="submit"}}>
      <div class="form-group">
        {{input name="email" placeholder=(t 'resend-confirmation-email.email-placeholder') value=email class="form-control"}}
      </div>

      <button type="submit" class="btn btn-primary">{{t 'resend-confirmation-email.submit-button'}}</button>
    </form>
  </div>
</div>
