<div class="navbar navbar-static-top navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{link-to 'How to say' 'index' class="navbar-brand"}}
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        {{locale-select}}
        {{#if session.isAuthenticated}}
          <p class="navbar-text">
            {{session.data.authenticated.data.attributes.name}}
          </p>
          <li>
            <a href="#" {{action 'invalidateSession'}}>{{t 'header.signout-link'}}</a>
          </li>
        {{else}}
          <li>{{link-to (t 'header.signin-link') 'signin'}}</li>
          <li>{{link-to (t 'header.signup-link') 'signup' tagName="button" class="btn btn-default navbar-btn"}}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</div>
