<div class="answers-edit">
  <h2 class="title">{{t 'answers.edit.title'}}</h2>

  <div class="form">
    <div class="form-group">
      {{textarea
        value=model.text
        class="form-control"
        placeholder=(t 'questions.show.new-answer-form.text-placeholder')
        rows="3"
      }}
    </div>

    <button class="btn btn-primary btn-lg" {{action 'editAnswer'}}>
      {{t 'answers.edit.submit-button'}}
    </button>
  </div>
</div>
