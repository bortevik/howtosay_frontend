<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>{{t 'signup.title'}}</h2>
    <hr/>

    {{#if (and showErrors (not model.validations.isValid))}}
      <ul class="alert alert-danger list-unstyled">
        {{#each model.validations.errors as |error|}}
          <li>{{error.message}}</li>
        {{/each}}
      </ul>
    {{/if}}

    <form onsubmit={{action 'signup'}}>
      <div class="form-group {{if (and showErrors (not model.validations.attrs.name.isValid)) 'has-error'}}">
        {{input name="name" placeholder=(t 'signup.name-placeholder') value=model.name class="form-control"}}
      </div>

      <div class="form-group {{if (and showErrors (not model.validations.attrs.email.isValid)) 'has-error'}}">
        {{input name="email" placeholder=(t 'signup.email-placeholder') value=model.email class="form-control"}}
      </div>

      <div class="form-group {{if (and showErrors (not model.validations.attrs.password.isValid)) 'has-error'}}">
        {{input name="password" type="password" placeholder=(t 'signup.password-placeholder') value=model.password class="form-control"}}
      </div>

      <div class="form-group {{if (and showErrors (not model.validations.attrs.passwordConfirmation.isValid)) 'has-error'}}">
        {{input name="password-confirmation"
          type="password"
          value=model.passwordConfirmation
          placeholder=(t 'signup.password-confirmation-placeholder')
          class="form-control"
        }}
      </div>

      <button type="submit" class="btn btn-primary">{{t 'signup.submit-button'}}</button>
    </form>

  </div>
</div>
