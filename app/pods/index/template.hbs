{{#if session.isAuthenticated}}
  {{link-to (t 'index.new-question-button') 'questions.new' class="btn btn-success"}}
  <hr>
{{else}}
  <div class="well row prompt">
    <div class="col-md-9 text">
      {{t 'index.prompt'}}
    </div>
    <div class="col-md-3">
      {{link-to (t 'header.signup-link') 'signup' class="btn btn-primary btn-lg"}}
    </div>
  </div>
{{/if}}

<div class="question-list">
  {{#each questions as |question|}}
    {{index/question-item question=question}}
  {{/each}}
</div>

{{howtosay-pagination model=questions paginate=(action 'paginate')}}

