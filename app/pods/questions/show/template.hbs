<div class="questions-show">

  {{questions/show/question-block question=question deleteQuestion=(action 'deleteQuestion')}}

  <h4 class="answers-title">{{t 'questions.show.answers-title' count=filteredAnswers.length}}</h4>

  <div class="answers">
    {{#each filteredAnswers as |answer|}}
      <div class="answer">
        <div class="text">
          {{answer.text}}
        </div>
        <div class="info row">
          <div class="col-md-6 menu">
            {{link-to (t 'questions.show.answer.edit-link') 'answers.edit' answer}}
            <a href="#" {{action 'deleteAnswer' answer}}>{{t 'questions.show.answer.delete-link'}}</a>
          </div>
          <div class="col-md-6"></div>
        </div>
      </div>
    {{/each}}
  </div>

  <form class="new-question-form" onsubmit={{action 'createAnswer'}}>
    <div class="form-group">
      {{textarea
        value=newAnswer.text
        class="form-control"
        placeholder=(t 'questions.show.new-answer-form.text-placeholder')
        rows="3"}}
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        {{t 'questions.show.new-answer-form.submit-button'}}
      </button>
    </div>
  </form>

</div>
