<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>{{t 'signin.title'}}</h2>
    <hr/>

    {{#if errorMessage}}
      <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}

    <form {{action 'authenticate' on="submit"}}>
      <div class="form-group">
        {{input name="email" placeholder=(t 'signin.email-placeholder') value=identification class="form-control"}}
      </div>

      <div class="form-group">
        {{input name="password" type="password" placeholder=(t 'signin.password-placeholder') value=password class="form-control"}}
      </div>

      <button type="submit" class="btn btn-primary">{{t 'signin.submit-button'}}</button>
    </form>

  </div>
</div>
